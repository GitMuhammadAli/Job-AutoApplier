generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── AUTH (NextAuth) ──

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  userJobs      UserJob[]
  resumes       Resume[]
  settings      UserSettings?
  activities    Activity[]
  applications  JobApplication[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── GLOBAL JOB (scraped once, shared across ALL users) ──

model GlobalJob {
  id              String    @id @default(cuid())
  title           String
  company         String
  location        String?
  description     String?   @db.Text
  salary          String?
  jobType         String?
  experienceLevel String?
  category        String?
  skills          String[]
  postedDate      DateTime?
  expiryDate      DateTime?
  source          String
  sourceId        String
  sourceUrl       String?
  applyUrl        String?
  companyUrl      String?
  companyEmail    String?
  isActive        Boolean   @default(true)
  lastSeenAt      DateTime  @default(now())
  userJobs        UserJob[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([sourceId, source])
  @@index([source])
  @@index([category])
  @@index([isActive, createdAt])
  @@index([createdAt])
}

// ── USER JOB (per-user view of a GlobalJob) ──

model UserJob {
  id             String         @id @default(cuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  globalJobId    String
  globalJob      GlobalJob      @relation(fields: [globalJobId], references: [id], onDelete: Cascade)
  stage          JobStage       @default(SAVED)
  matchScore     Float?
  matchReasons   String[]
  notes          String?        @db.Text
  coverLetter    String?        @db.Text
  isBookmarked   Boolean        @default(false)
  isDismissed    Boolean        @default(false)
  dismissReason  String?
  lastFollowUpAt DateTime?
  followUpCount  Int            @default(0)
  activities     Activity[]
  application    JobApplication?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@unique([userId, globalJobId])
  @@index([userId, stage])
  @@index([userId, matchScore])
  @@index([userId, isDismissed])
  @@index([userId, createdAt])
}

enum JobStage {
  SAVED
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
  GHOSTED
}

// ── RESUME ──

model Resume {
  id           String           @id @default(cuid())
  userId       String
  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  fileName     String?
  fileUrl      String?
  fileType     String?
  content      String?          @db.Text
  isDefault    Boolean          @default(false)
  applications JobApplication[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@index([userId])
}

// ── USER SETTINGS ──

model UserSettings {
  id                       String          @id @default(cuid())
  userId                   String          @unique
  user                     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Personal
  fullName                 String?
  phone                    String?
  linkedinUrl              String?
  portfolioUrl             String?
  githubUrl                String?
  // Job Preferences
  keywords                 String[]
  city                     String?
  country                  String?
  salaryMin                Int?
  salaryMax                Int?
  salaryCurrency           String?         @default("USD")
  experienceLevel          String?
  education                String?
  workType                 String[]
  jobType                  String[]
  languages                String[]
  preferredCategories      String[]
  preferredPlatforms       String[]
  // Notifications
  emailNotifications       Boolean         @default(true)
  notificationEmail        String?
  // Application Automation
  applicationEmail         String?
  applicationMode          ApplicationMode @default(SEMI_AUTO)
  autoApplyEnabled         Boolean         @default(false)
  maxAutoApplyPerDay       Int             @default(10)
  minMatchScoreForAutoApply Float          @default(75.0)
  defaultSignature         String?         @db.Text
  // AI Customization
  customSystemPrompt       String?         @db.Text
  preferredTone            String?         @default("professional")
  emailLanguage            String?         @default("English")
  includeLinkedin          Boolean         @default(true)
  includeGithub            Boolean         @default(true)
  includePortfolio         Boolean         @default(true)
  customClosing            String?
  // Relations & State
  emailTemplates           EmailTemplate[]
  isOnboarded              Boolean         @default(false)
  createdAt                DateTime        @default(now())
  updatedAt                DateTime        @updatedAt
}

enum ApplicationMode {
  SEMI_AUTO
  FULL_AUTO
}

// ── EMAIL TEMPLATE ──

model EmailTemplate {
  id         String       @id @default(cuid())
  userId     String
  settingsId String
  settings   UserSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)
  name       String
  subject    String
  body       String       @db.Text
  isDefault  Boolean      @default(false)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  @@index([userId])
}

// ── JOB APPLICATION ──

model JobApplication {
  id             String            @id @default(cuid())
  userJobId      String            @unique
  userJob        UserJob           @relation(fields: [userJobId], references: [id], onDelete: Cascade)
  userId         String
  user           User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  senderEmail    String
  recipientEmail String
  subject        String
  emailBody      String            @db.Text
  resumeId       String?
  resume         Resume?           @relation(fields: [resumeId], references: [id])
  coverLetter    String?           @db.Text
  templateId     String?
  status         ApplicationStatus @default(DRAFT)
  sentAt         DateTime?
  errorMessage   String?
  retryCount     Int               @default(0)
  appliedVia     ApplyMethod       @default(EMAIL)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@index([userId, status])
  @@index([userId, createdAt])
}

enum ApplicationStatus {
  DRAFT
  READY
  SENDING
  SENT
  FAILED
  BOUNCED
}

enum ApplyMethod {
  EMAIL
  MANUAL
  PLATFORM
}

// ── ACTIVITY TIMELINE ──

model Activity {
  id        String       @id @default(cuid())
  userJobId String
  userJob   UserJob      @relation(fields: [userJobId], references: [id], onDelete: Cascade)
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      ActivityType
  description String
  createdAt DateTime     @default(now())

  @@index([userJobId])
  @@index([userId, createdAt])
}

enum ActivityType {
  STAGE_CHANGE
  NOTE_ADDED
  COVER_LETTER_GENERATED
  APPLICATION_PREPARED
  APPLICATION_SENT
  APPLICATION_FAILED
  APPLICATION_COPIED
  FOLLOW_UP_SENT
  MANUAL_UPDATE
  DISMISSED
}
